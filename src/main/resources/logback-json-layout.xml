<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProperty name="APP_NAME" source="application.name"/>
    <springProperty name="APP_ID" source="application.id"/>
    <springProperty name="APP_ENV" source="application.profile"/>

    <appender name="json" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <jsonGeneratorDecorator class="net.logstash.logback.mask.MaskingJsonGeneratorDecorator">
               <path>individualName</path>
            </jsonGeneratorDecorator>
            <providers>
                <mdc/>
                <timestamp>
                    <pattern>yyyy-MM-dd'T'HH:mm:ssTZD</pattern>
                </timestamp>
                <logLevel/>
                <pattern>
                    <pattern>
                        {
                        "environment": "${APP_ENV}",
                        "appRID": "${APP_ID}",
                        "appRName": "${APP_NAME}",
                        "thread": "%thread",
                        "class": "%logger{40}",
                        "message": "#tryJson{%message}"
                        }
                    </pattern>
                </pattern>
                <stackTrace>
                    <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                        <maxDepthPerThrowable>10</maxDepthPerThrowable>
                        <rootCauseFirst>true</rootCauseFirst>
                    </throwableConverter>
                </stackTrace>
            </providers>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="json"/>
    </root>

</configuration>
